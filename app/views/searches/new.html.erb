<div class="center">
  <div class="background-home">



  <h1>Search</h1>

  <%= form_for @search do |s| %>

    <div class="field">
      <%= s.label :category %>  <br />
      <%= s.select :category, options_for_select(@categories), :include_blank => true %>
    </div>

    <div class="field">
      <p><%= s.label :min_price, "Min Price" %> - <%= s.text_field :min_price, size: 10 %></p>
      <p><%= s.label :max_price, "Max Price" %> - <%= s.text_field :max_price, size: 10 %></p>
    </div>

    <div class="actions">
      <%= s.submit "Search"%>
    </div>

    <% end %>
    <p><%= link_to "back", restaurants_path %></p>

    </div>
</div>
