
<h1><%= @restaurant.name %></h1>

<p>
  Category: <%= @restaurant.category %><br>
  Capacity: <%= @restaurant.capacity %><br>
  Price: <%= @restaurant.price %><br>
  Location: <%= @restaurant.city %><br>
</p>

<%= link_to 'Make a Reservation Here', new_restaurant_reservation_path(@restaurant) %>

<h3>Our Reservations List:</h3>

<table>
    <tr>
      <th><b>Date and Time</b></th>
      <th><b>Guests</b></th>
      <th><b>Customer</b></th>
    </tr>
  <% @restaurant.reservations.each do |reservation| %>
    <tr>
      <td><%= reservation.time %></td>
      <td><%= reservation.people %></td>
      <td><%= reservation.user.username %></td>
    <tr>
  <% end %>
</table>

<%= link_to 'Back to Restaurants', restaurants_path %>
