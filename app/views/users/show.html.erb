<h1>My profile</h1>

<ul>
  username:  <%= current_user.username %> <br>
  email:  <%= current_user.email %> <br>
  phone:  <%= current_user.phone %> <br>
  password:  <%= current_user.password %> <br>
  user_id <%= current_user.id %> <br />
</ul>

<%= link_to "Back to Restaurants", restaurant_url %>

<h2>My Reservations</h2>
<% @user.reservations.each do |reservation| %>
  <br> <%= reservation.restaurant.name %> <br>
  <br> <%= reservation.people %> <br>
  <br> <%= reservation.time %> <br>
<% end %>
